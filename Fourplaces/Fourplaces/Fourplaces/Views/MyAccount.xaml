<?xml version="1.0" encoding="UTF-8"?>
<mvvm:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fourplaces.Views.MyAccount"
             xmlns:mvvm="clr-namespace:Storm.Mvvm.Forms;assembly=Storm.Mvvm.Forms">
  <ContentPage.Content>
      <StackLayout>
            <Label Text="Mon Compte"/>
            <Image Source="{Binding User.SOURCEIMAGE}" WidthRequest="200" HeightRequest="200" />
            <Label Text="{Binding User.FirstName,StringFormat='First Name:{0}'}"  />
            <Label Text="{Binding User.LastName,StringFormat='Last Name:{0}'}"  />
            <Label Text="{Binding User.Email,StringFormat='email:{0}'}"  />
            <Label Text="{Binding User.ImageId,StringFormat='Image Id:{0}'}" />


            <StackLayout Orientation="Horizontal">
                <Button Text="Editer compte" Command="{Binding EditAccount}"/>
                <Button Text="editer mdp" Command="{Binding PasswordEditAccount}"/>
            </StackLayout>
        </StackLayout>
  </ContentPage.Content>
</mvvm:BaseContentPage>