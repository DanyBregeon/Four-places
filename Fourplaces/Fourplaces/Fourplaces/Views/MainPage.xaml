    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Sign in" Command="{Binding Connection}"  Order="Primary" Priority="0" />
        <ToolbarItem Name="Sign up" Command="{Binding Registration}"  Order="Primary" Priority="1" />
        <ToolbarItem Name="My account" Command="{Binding MyAccount}"  Order="Primary" Priority="2" />
        <ToolbarItem Name="Add place" Command="{Binding AddPlace}"  Order="Primary" Priority="3" />
    </ContentPage.ToolbarItems>

    <ListView ItemsSource="{Binding ListPlaceSummary}"
                  HasUnevenRows="true"
                  SelectedItem="{Binding PlaceSummary}">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="{Binding SourceImage}" WidthRequest="80" HeightRequest="80"/>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding Title, StringFormat='titles:{0}'}"/>
                            <Label Text="{Binding Description  , StringFormat='description:{0}'}" LineBreakMode="TailTruncation" MaxLines="3"/>

                        </StackLayout>
                    </StackLayout>
                </ViewCell>

            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</mvvm:BaseContentPage>    
    
    
