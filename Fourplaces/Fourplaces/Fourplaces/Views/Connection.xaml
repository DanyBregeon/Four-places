<?xml version="1.0" encoding="UTF-8"?>
<mvvm:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fourplaces.Views.Connection"
             xmlns:mvvm="clr-namespace:Storm.Mvvm.Forms;assembly=Storm.Mvvm.Forms">
    
  <ContentPage.Content>
      <StackLayout>
            <Label Text="Connection : " HorizontalTextAlignment="Center" FontSize="Large" FontAttributes="Bold"/>
            <Entry Text="{Binding Login}" Placeholder="login" />
            <Entry Text="{Binding Password}" Placeholder="password" />
            <Button Text="Validate" Command="{Binding CmdConnection}"/>
            <Label Text="{Binding ErrorLabel}" TextColor="Red"/>
        </StackLayout>
  </ContentPage.Content>
</mvvm:BaseContentPage>